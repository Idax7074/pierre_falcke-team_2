  <h2 class="f">F</h2>
  <h2 class="a">A</h2>
  <h2 class="l">L</h2>
  <h2 class="c">C</h2>
  <h2 class="k">K</h2>
  <h2 class="e">E</h2>
</div>

<style>
  .text {
    display: flex;
    justify-content: center;
  }

  h2 {
    font-size: 20rem;
  }

  .f {
    animation: wobble-hor-bottom 0.8s both;
  }

  .a {
    animation: wobble-hor-bottom 0.8s 0.2s both;
  }

  .l {
    animation: wobble-hor-bottom 0.8s 0.4s both;
  }

  .c {
    animation: wobble-hor-bottom 0.8s 0.6s both;
  }

  .k {
    animation: wobble-hor-bottom 0.8s 0.8s both;
  }

  .e {
    animation: wobble-hor-bottom 0.8s 1s both;
  }

  @keyframes wobble-hor-bottom {
    0%,
    100% {
      transform: translateX(0);
      transform-origin: 50% 50%;
    }
    15% {
      transform: translateX(-30px) rotate(-6deg);
    }
    30% {
      transform: translateX(15px) rotate(6deg);
    }
    45% {
      transform: translateX(-15px) rotate(-3.6deg);
    }
    60% {
      transform: translateX(9px) rotate(2.4deg);
    }
    75% {
      transform: translateX(-6px) rotate(-1.2deg);
    }
  }
  @media (max-width: 820px) {
    h2 {
      font-size: 10rem;
    }
  }

